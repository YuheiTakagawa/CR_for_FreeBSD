include scripts/msg.mk
include scripts/tools.mk

CFLAG = -Wall
CFLAG += -D_WITH_DPRINTF

UNAME := ${shell uname}
SRC_DIR = ./src

INCLUDE_COMMON = ./src/include/common 

ifeq ($(UNAME), Linux)
# for Linux include file
INCLUDE_DEP = ./src/include/linux
endif

ifeq ($(UNAME), FreeBSD)
# for FreeBSD include file
INCLUDE_DEP = ./src/include/freebsd
CFLAG += -lprocstat
endif

ifneq ($(UNAME), Linux)
ifneq ($(UNAME), FreeBSD)
	$(error ("Sorry, unsupported"))
endif
endif


INCLUDE = -I $(INCLUDE_DEP) -I $(INCLUDE_COMMON) 

OBJ += compel/infect.a
OBJ += $(INCLUDE_DEP)/ptrace.o
OBJ += $(INCLUDE_DEP)/parasite_syscall.o

%.o: %.c
	$(Q) $(CC) $(INCLUDE) $(CFALG) -c -o $@ $^

compel/infect.a:
	$(GNUMAKE) -e -C compel

.PHONY: all
all: restore getall


restore: $(SRC_DIR) $(INCLUDE_DEP) $(INCLUDE_COMMON) $(OBJ)
	$(call msg-gen, $@)
	$(Q) $(CC) $(CFLAG) $(INCLUDE) $(SRC_DIR)/restore.c $(OBJ) -o $@


getall: $(SRC_DIR) $(INCLUDE_DEP) $(INCLUDE_COMMON) $(OBJ)
	$(call msg-gen, $@)
	$(Q) $(CC) $(CFLAG) $(INCLUDE) $(SRC_DIR)/getall.c $(OBJ) -o $@


.PHONY: clean
clean:
	$(call msg-clean, "criu")
	$(Q) $(RM) restore
	$(Q) $(RM) getall
	$(Q) $(GNUMAKE) -e -C compel clean
